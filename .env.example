# Database Configuration
DATABASE_HOST=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=visitor_system_db
POSTGRES_PORT=5432

# Docker Environment
IN_DOCKER=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CACHE_URL=redis://redis:6379/1

# Django Settings
DEBUG=true
SECRET_KEY=your_secure_secret_key
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=https://example.ngrok-free.app
DJANGO_LOG_TO_STDOUT=true

VAPID_PRIVATE_KEY=changeme
VAPID_PUBLIC_KEY=changeme
VAPID_ADMIN_EMAIL=alerts@example.com

# HikCentral Configuration
HIKCENTRAL_ORG_NAME=Visitor Management
# HIKCENTRAL_DEFAULT_ORG_INDEX=12345
HIKCENTRAL_FORCE_ORG=true
HIKCENTRAL_FACE_GROUP_INDEX_CODE=1
HIKCENTRAL_VERIFY_TLS=true
# Path to additional CA bundle when using a private certificate authority
HIKCENTRAL_CA_BUNDLE=/etc/ssl/certs/hikcentral.pem

# Container runtime toggles
WAIT_FOR_DB=true
RUN_MIGRATIONS=false
COLLECT_STATIC=false
